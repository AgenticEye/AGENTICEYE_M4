generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String        @id @default(uuid())
  kindeId          String        @unique
  email            String        @unique
  credits          Int           @default(3)
  tier             String        @default("Free")
  stripeCustomerId    String?       @unique
  max_history         Int?          // null = unlimited
  competitor_analysis Boolean       @default(false)
  pro_hooks           Boolean       @default(false)
  export_no_watermark Boolean       @default(false)
  theme               String?       // "solitaire-purple"
  createdAt           DateTime      @default(now())
  analyses            Analysis[]
  videoReports        VideoReport[]
}

model Analysis {
  id         String   @id @default(uuid())
  userId     String
  url        String
  result     Json
  viralScore Float
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
}

model VideoReport {
  id        String   @id @default(uuid())
  userId    String
  title     String
  duration  String
  script    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
